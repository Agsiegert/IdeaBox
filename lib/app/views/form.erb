<form action='/<%= idea.id %>' method='POST' enctype='multipart/form-data'>
  <p>
    <% if idea.id %>
      Edit your Idea:
    <% else %>
      Your Idea:
    <% end %>
  </p>
  <% if idea.id %>
    <input type="hidden" name="_method" value="PUT" />
  <% end %>
  <input type='text' name='idea[title]' value="<%= idea.title %>"/><br/>
  <textarea name='idea[description]'><%= idea.description %></textarea><br/>
<!-- Uploads -->
  <p> Upload an Idea </p>
  <input type="file" accept="audio/*|video/*|image/*" name="uploads" />
<br>
  <input type='submit' value='Submit Idea'/>

</form>


